{{#if result.result.isValid}}
    <h1>Bienvenido! {{user.first_name}} {{user.last_name}}</h1>
    <a href="/api/sessions/logout"><button>Cerrar Sesion</button></a>
    <div>
        {{#each result.result.docs}}
            <div>
                <p>Product: {{this.title}} &nbsp; {{this.description}}</p>
                <p>Categoria: {{this.category}} &nbsp; Precio: {{this.price}}</p>
                <button>Agregar al carrito</button>
            </div>
        {{/each}}
    </div>
    <br/>
    <div>
        {{#if result.result.hasPrevPage}}
            <a href={{result.result.prevLink}}>Anterior </a>
        {{/if}}
        &nbsp;
        {{result.result.page}}
        &nbsp;
        {{#if result.result.hasNextPage}}
            <a href={{result.result.nextLink}}> Siguiente</a>
        {{/if}}
    </div>
{{else}}
    <h1>No hay productos para mostrar</h1>
{{/if}}